<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/black" /> <!-- Color de fondo -->
            <corners android:radius="20dp" /> <!-- Radio de las esquinas -->
        </shape>
    </item>
    <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="@color/white" /> <!-- Color de fondo -->
        </shape>
    </item>
    <item android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="@color/white" /> <!-- Borde negro de 2dp -->
        </shape>
    </item>
</layer-list>

